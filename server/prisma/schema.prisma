// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  dollerBalance Float    @default(0)
  cryptoBalance Float    @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  coins         Coin[]
}

model Coin {
  id                Int           @id @default(autoincrement())
  name              String
  apiSymbol         String
  symbol            String
  thump             String
  large             String
  marketCapRank     Int
  averageBuyPrice   Float         @default(0)
  totalQuantity     Float         @default(0)
  latestPrice       Float         @default(0)
  holdingsInDollers Float         @default(0)
  profitLoss        Float         @default(0)
  totalInvestment   Float         @default(0) // How much invested user is in a coin
  cost              Float         @default(0) // Cost means how much $ costed in buying coins
  active            Boolean       @default(true)
  user              User          @relation(fields: [userId], references: [id])
  transactions      Transaction[]
  userId            Int
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model Transaction {
  id         Int      @id @default(autoincrement())
  price      Float
  quantity   Float
  timeBought DateTime
  type       String
  Coin       Coin     @relation(fields: [coinId], references: [id])
  coinId     Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
